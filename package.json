{
    "name": "hyperviewer",
    "description": "Review footage instantly, choose highlights, and export only what you need in full quality.",
    "version": "1.0.0",
    "license": "AGPL-3.0-or-later",
    "author": "Paulius Jacinkevičius <irgipaulius@gmail.com>",
    "contributors": [
        "Paulius Jacinkevičius <irgipaulius@gmail.com>"
    ],
    "keywords": [
        "nextcloud",
        "hyperviewer",
        "video",
        "hls",
        "streaming"
    ],
    "bugs": {
        "url": "https://github.com/irgipaulius/hyperviewer/issues"
    },
    "repository": {
        "url": "https://github.com/irgipaulius/hyperviewer",
        "type": "git"
    },
    "homepage": "https://github.com/irgipaulius/hyperviewer",
    "private": true,
    "scripts": {
        "build": "NODE_ENV=production webpack --progress --config webpack.js",
        "dev": "NODE_ENV=development webpack --progress --config webpack.js",
        "watch": "NODE_ENV=development webpack --progress --watch --config webpack.js",
        "build:vite": "vite build",
        "dev:vite": "vite --mode development build",
        "watch:vite": "vite --mode development build --watch",
        "lint": "eslint --ext .js,.vue src",
        "lint:fix": "eslint --ext .js,.vue src --fix",
        "stylelint": "stylelint src/**/*.vue src/**/*.scss src/**/*.css",
        "stylelint:fix": "stylelint src/**/*.vue src/**/*.scss src/**/*.css --fix"
    },
    "dependencies": {
        "@nextcloud/axios": "^2.5.2",
        "@nextcloud/files": "^2.0.0",
        "@nextcloud/l10n": "^1.4.1",
        "@nextcloud/router": "^3.0.1",
        "@nextcloud/vue": "^4.0.2",
        "hls.js": "^1.4.12",
        "shaka-player": "^4.16.2",
        "vue": "^2.6.12"
    },
    "browserslist": [
        "extends @nextcloud/browserslist-config"
    ],
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=7.0.0"
    },
    "devDependencies": {
        "@nextcloud/babel-config": "^1.0.0",
        "@nextcloud/browserslist-config": "^2.1.0",
        "@nextcloud/eslint-config": "^6.0.0",
        "@nextcloud/stylelint-config": "^1.0.0-beta.0",
        "@nextcloud/webpack-vue-config": "^4.0.3",
        "html-loader": "^5.1.0"
    }
}
